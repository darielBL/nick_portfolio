<%= turbo_frame_tag "gallery" do %>
  <div id="about">
    <!-- DESKTOP -->
    <div class="d-none d-md-flex flex-column align-items-center">
      <div class="d-flex flex-row-reverse align-items-start position-relative" style="width: 720px;">
        <div style="width: 500px; flex-shrink: 0;">
          <% if about.image.attached? %>
            <%= image_tag about.image, class: "img-fluid d-block",
                          style: "aspect-ratio: 4/3; object-fit: cover; width: 100%; height: 375px;" %>
          <% else %>
            <%= image_tag about.image_url, class: "img-fluid d-block",
                          style: "aspect-ratio: 4/3; object-fit: cover; width: 100%; height: 375px;" %>
          <% end %>
        </div>
        <div style="width: 220px; margin-right: -30px; margin-top: 30px; z-index: 2; position: relative;">
          <div class="bg-white p-4 shadow-sm">
            <p class="mb-3" style="font-size: 0.95rem; line-height: 1.5;"><%= about.description %></p>
            <p class="text-secondary small mb-0"><%= about.email %></p>
          </div>
        </div>
      </div>

      <!-- REDES SOCIALES -->
      <div class="mt-4 pt-3 border-top w-100" style="max-width: 720px;">
        <p class="fw-medium mb-2 text-center" style="color: #f1f1f1;">Find me on</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
          <% social_links.each do |link| %>
            <%= link_to link.url, target: "_blank",
                        class: "btn btn-light border px-4 py-2 d-inline-flex align-items-center gap-2" do %>
              <i class="<%= link.icon %>"></i>
              <span style="font-size: 0.9rem;"><%= link.label %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- MÃ“VIL -->
    <div class="d-md-none">
      <% if about.image.attached? %>
        <%= image_tag about.image, class: "img-fluid mb-4",
                      style: "aspect-ratio: 4/3; object-fit: cover; width: 100%;" %>
      <% else %>
        <%= image_tag about.image_url, class: "img-fluid mb-4",
                      style: "aspect-ratio: 4/3; object-fit: cover; width: 100%;" %>
      <% end %>
      <div class="bg-white p-4 shadow-sm">
        <p class="mb-3"><%= about.description %></p>
        <p class="text-secondary small mb-0"><%= about.email %></p>
      </div>
      <div class="mt-4 pt-3 border-top">
        <p class="fw-medium mb-2" style="color: #f1f1f1;">Find me on</p>
        <div class="d-flex gap-3 flex-wrap">
          <% social_links.each do |link| %>
            <%= link_to link.url, target: "_blank",
                        class: "btn btn-light border px-4 py-2 d-inline-flex align-items-center gap-2" do %>
              <i class="<%= link.icon %>"></i>
              <%= link.label %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>