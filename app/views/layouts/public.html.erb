<!--        <span class="text-secondary small"><%#= item[:email] %></span>-->
<!--      </div>-->
    <%# end %>
<!--  </footer>-->
</div>

<!-- BOTÃ“N SECRETO -->
<div class="position-fixed bottom-0 end-0 m-4">
  <%#= link_to login_path, class: "btn btn-light rounded-circle p-3 border opacity-50",
              style: "width: 50px; height: 50px; transition: opacity 0.2s;" do %>
<!--    <i class="fas fa-lock"></i>-->

</div>

<!-- MODAL DE LOGIN (OCULTO POR DEFECTO) -->
<div id="loginModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.8); z-index: 9999; align-items: center; justify-content: center;">
  <div style="background-color: white; width: 90%; max-width: 400px; border-radius: 0; padding: 40px;">

    <div style="text-align: center; margin-bottom: 30px;">
      <h2 style="color: #000; font-size: 24px; font-weight: 500; margin-bottom: 8px;">Admin Access</h2>
      <p style="color: #666; font-size: 14px; margin: 0;">NICK NIGHTIN</p>
    </div>

    <%= form_tag session_path, method: :post, id: "modal-login-form" do %>
      <div style="margin-bottom: 20px;">
        <%= label_tag :modal_email, "Email", style: "display: block; margin-bottom: 8px; color: #333; font-size: 14px; font-weight: 500;" %>
        <%= email_field_tag :email, nil,
                            id: "modal_email",
                            style: "width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 0; font-size: 14px;",
                            placeholder: "admin@nicknightin.com",
                            required: true %>
      </div>

      <div style="margin-bottom: 30px;">
        <%= label_tag :modal_password, "ContraseÃ±a", style: "display: block; margin-bottom: 8px; color: #333; font-size: 14px; font-weight: 500;" %>
        <%= password_field_tag :password, nil,
                               id: "modal_password",
                               style: "width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 0; font-size: 14px;",
                               placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢",
                               required: true %>
      </div>

      <div style="display: flex; gap: 10px;">
        <%= submit_tag "Iniciar sesiÃ³n",
                       style: "flex: 1; padding: 12px; background-color: #000; color: white; border: none; border-radius: 0; font-size: 14px; font-weight: 500; cursor: pointer;" %>

        <button type="button" id="closeModalBtn"
                style="flex: 1; padding: 12px; background-color: #f5f5f5; color: #333; border: none; border-radius: 0; font-size: 14px; font-weight: 500; cursor: pointer;">
          Cancelar
        </button>
      </div>
    <% end %>

    <div style="margin-top: 25px; text-align: center; color: #999; font-size: 12px;">
      <p style="margin-bottom: 5px;">Demo credentials:</p>
      <p style="margin-bottom: 0; color: #666; font-weight: 500;">admin@nicknightin.com / admin1234</p>
    </div>
  </div>
</div>

<!-- BOTÃ“N DE ACCESO - ACTUALIZADO -->
<div class="position-fixed bottom-0 end-0 m-4" style="z-index: 1000;">
  <button id="showLoginModalBtn" class="btn btn-light rounded-circle p-3 border opacity-50"
          style="width: 50px; height: 50px; transition: opacity 0.2s; background-color: #2a2a2a; border-color: #444; color: #b0b0b0;">
    <i class="fas fa-lock"></i>
  </button>
</div>

<!-- SCRIPT PARA EL MODAL -->
<script>
    (function() {
        // Elementos del modal
        const modal = document.getElementById('loginModal');
        const showBtn = document.getElementById('showLoginModalBtn');
        const closeBtn = document.getElementById('closeModalBtn');

        // Mostrar modal
        if (showBtn) {
            showBtn.addEventListener('click', function(e) {
                e.preventDefault();
                if (modal) {
                    modal.style.display = 'flex';
                }
            });
        }

        // Cerrar modal
        if (closeBtn) {
            closeBtn.addEventListener('click', function() {
                if (modal) {
                    modal.style.display = 'none';
                    // Limpiar campos
                    const email = document.getElementById('modal_email');
                    const password = document.getElementById('modal_password');
                    if (email) email.value = '';
                    if (password) password.value = '';
                }
            });
        }

        // Cerrar modal al hacer clic fuera del contenido
        if (modal) {
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    modal.style.display = 'none';
                }
            });
        }
    })();
</script>
</body>
</html>