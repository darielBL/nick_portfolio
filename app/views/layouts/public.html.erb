<body>
<div class="container py-5 landing-container">  <!-- ðŸ‘ˆ Agrega esta clase -->
  <!-- HEADER CENTRADO -->
  <header class="text-center mb-5">
    <h1 class="display-4 fw-normal">NICK NIGHTIN</h1>
    <p class="text-secondary mb-4 text-lowercase">character designer</p>

    <!-- NAVEGACIÃ“N CENTRADA CON TURBO -->
    <nav class="d-flex justify-content-center gap-5 pb-3 border-bottom">
      <%= link_to "Portfolio", root_path(anchor: "portfolio", section: "portfolio"),
                  class: "text-decoration-none nav-link #{@section == 'portfolio' ? 'active' : ''}",
                  data: { turbo_frame: "gallery" } %>

      <%= link_to "Personal Work", personal_path,
                  class: "text-decoration-none nav-link #{@section == 'personal' ? 'active' : ''}",
                  data: { turbo_frame: "gallery" } %>

      <%= link_to "About me", about_path,
                  class: "text-decoration-none nav-link #{@section == 'about' ? 'active' : ''}",
                  data: { turbo_frame: "gallery" } %>
    </nav>
  </header>

  <!-- TURBO FRAME - SOLO RENDERIZA LA SECCIÃ“N ACTIVA -->
  <%= turbo_frame_tag "gallery" do %>
    <% if @section == 'portfolio' %>
      <%= render "home/portfolio", images: @portfolio_images, about: @about %>
    <% elsif @section == 'personal' %>
      <%= render "home/personal", works: @personal_works, about: @about %>
    <% elsif @section == 'about' %>
      <%= render "home/about", about: @about, social_links: @social_links %>
